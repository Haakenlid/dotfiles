[user]
  email = haakenlid@gmail.com
  name = HÃ¥ken Lid
[color]
  ui = auto
[core]
  excludesfile = ~/.gitignore_global
  autocrlf = input
  whitespace = fix,space-before-tab,tab-in-indent,trailing-space
[apply]
  whitespace = fix
[alias]
  br = branch
  ci = commit
  co = checkout
  df = diff
  g = grep -I
  lg = log -p
  pp = !"echo 'Pull'; git pull; echo 'Push'; git push"
  rb = rbranch
  rv = review
  st = status
  ksdiff = difftool -y -t Kaleidoscope
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[merge]
  log = true
	tool = fugitive
[difftool "Kaleidoscope"]
  cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[rerere]
  enabled = 1
[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
  insteadOf = "github:"
[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
  insteadOf = "gist:"
[url "git@heroku.com:"]
  insteadOf = "heroku:"
[push]
  default = current
[difftool "idiff"]
	cmd = diff -i $LOCAL $REMOTE
[difftool]
	prompt = 0
[url "https://"]
	insteadOf = git://
[mergetool "fugitive"]
	cmd = "printf \"\\033]2;nvim\\033\\\\\"; nvim -f -c \"Gvdiff\" \"$MERGED\""
[github]
	user = haakenlid
[status]
	submoduleSummary = true
[diff]
	submodule = log
[interactive]
	singlekey = true
[pull]
	default = current
[pager]
	branch = less -FRX
